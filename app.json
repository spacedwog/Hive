{
  "expo": {
    "name": "Hive",
    "slug": "Hive",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "hive",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.spacedwog.Hive",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "O aplicativo precisa acessar a câmera para transmitir vídeo.",
        "NSLocationWhenInUseUsageDescription": "O aplicativo precisa acessar sua localização para mostrar dispositivos próximos.",
        "NSLocationAlwaysUsageDescription": "O aplicativo precisa acessar sua localização em segundo plano para monitoramento contínuo.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "192.168.4.1": { "NSExceptionAllowsInsecureHTTPLoads": true },
            "192.168.15.166": { "NSExceptionAllowsInsecureHTTPLoads": true }
          }
        },
        "UIBackgroundModes": ["fetch", "location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.spacedwog.Hive",
      "permissions": ["ACCESS_FINE_LOCATION", "CAMERA", "INTERNET", "VIBRATE"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d2162a99-5b08-44cf-82b7-dcf471b9540c"
      }
    }
  }
}